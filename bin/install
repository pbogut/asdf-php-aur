#!/usr/bin/env bash

set -eo pipefail

install_filter_packages() {
  filters=$1
  version=$2
  if [[ -z $filters ]]; then
    cat
  elif [[ $filters == "all" ]] || [[ $filters == '*' ]]; then
    grep -v '.*'
    echo "aur/php${version}"
  else
    echo "$filters" >>/tmp/filters
    filters=${filters//[^a-zA-Z0-9,_-]/}
    filters="\<${filters//,/\\>\\|\\<}\>"
    echo "$filters" >>/tmp/filters
    grep -v "${filters}"
  fi
}

install_php() {
  # shellcheck disable=2034
  local install_type=$1
  local version=$2
  local install_path=$3

  echo "=> Skip installation, you should install it yourself from aur"
  echo "=> Creating symlinks for php binaries:"

  mkdir -p "$install_path/bin"

  links_todo=(
    "php[version]"
    "phar[version]"
    "phar[version].phar"
    "pecl[version]"
    "pear[version]"
    "peardev[version]"
    "php-cgi[version]"
    "php-config[version]"
    "phpize[version]"
  )

  for link in "${links_todo[@]}"; do
    src="/usr/bin/${link//\[version\]/$version}"
    if [[ -f "$src" ]]; then
      echo ":: ${link//\[version\]/}"
      dst="$install_path/bin/${link//\[version\]/}"
      ln -s "$src" "$dst"
    fi
  done

  echo "=> Finished installing php $version"
}

install_php "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
